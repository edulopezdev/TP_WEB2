doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Museo Metropolitano de NY
    link(rel="stylesheet", href="../css/styles.css")
    link(href="https://fonts.googleapis.com/css2?family=Metamorphous&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://unpkg.com/sweetalert/dist/sweetalert.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    link(rel="icon" href="/images/favicon.ico")
    script(src="https://unpkg.com/sweetalert/dist/sweetalert.min.js")

  body
    header.fijo
      h1 ¡Bienvenidos al museo met de NY!

      .filtros-contenedor
        .filtros
          // Contenedor para el campo de búsqueda
          .filtro-item
            label(for="search", class="label-filtro") Buscar por palabra clave
            input(type="text", id="search", placeholder="Ingrese palabra en inglés")
          
          // Contenedor para el departamento
          .filtro-item
            label(for="department", class="label-filtro") Buscar por departamento
            select(id="department", class="departamentos")
              option(value="", selected) Ninguna opción
              // Agrega las opciones del departamento aquí

          // Contenedor para la localización
          .filtro-item
            label(for="location", class="label-filtro") Buscar localización
            select(id="location", class="localizaciones")
              option(value="", selected) Ninguna opción
              option(value="Japan") Japón
              option(value="Belgium") Bélgica
              option(value="Spain") España
              option(value="Germany") Alemania
              option(value="Mexico") México
              option(value="Canada") Canadá
              option(value="China") China
              option(value="Italy") Italia
              option(value="Venezuela") Venezuela
              option(value="Czech Republic") República Checa
              option(value="Guatemala") Guatemala
              option(value="England") Inglaterra
              option(value="Denmark") Dinamarca
              option(value="Netherlands") Países bajos

          button(class="btn", id="buscar", onclick="buscar()") Buscar

    // Loader
    div.loader
      // Este div será el contenedor del spinner
      .loader

    // Navegación
    div.navegacion
      .botones-contenedor
        button(id="btnAnterior", style="display: none", onclick="buscarAnterior()") Anterior
        div#paginaTexto(style="display: none") Página 1 de 10 
        button(id="btnSiguiente", style="display: none", onclick="buscarSiguiente()") Siguiente

    main(id="gallery")
      each objeto in objetos
        .carta
          img(src=objeto.image || 'default.jpg', alt=objeto.title)
          .carta-info
            .carta-title= objeto.title
            p= objeto.dynasty
            p= objeto.culture
            button.ver-imagenes-btn + imágenes

    // Contenedor de íconos y texto en la parte inferior derecha
    div(style="position: fixed; bottom: 20px; right: 20px; text-align: center; color: black; display: flex; flex-direction: column; align-items: center; z-index: 1000;")
      // Ícono de GitHub
      a(href="https://github.com/edulopezdev/TP_WEB2", target="_blank", style="margin-bottom: -5px; color: black; font-size: 24px;", title="Repositorio Eduardo López")
        i.fab.fa-github

      // Ícono de la API del Museo
      a(href="https://metmuseum.github.io/", target="_blank", style="margin-top: 10px; color: black; font-size: 24px;", title="API de consulta")
        i.fas.fa-university

    script(src="../js/script.js")
