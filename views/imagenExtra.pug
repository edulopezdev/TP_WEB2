doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Detalles de la Obra
    link(rel="stylesheet", href="/css/imagenExtra.css")
    // Asegúrate de enlazar tu CSS
  body
    header
      h1 Detalles de la Obra
      h2= objeto.title || 'Sin título'
    
    if objeto.primaryImage
      img(src=objeto.primaryImage, alt=objeto.title, class="imagen-extra")
    else
      img(src="/images/sin_imagen.png", alt="Sin imagen disponible", class="imagen-extra")
      
    p
      strong Dinastía: 
      = objeto.dynasty || 'No disponible'
    p
      strong Cultura: 
      = objeto.culture || 'No disponible'
    p
      strong Fecha de creación: 
      = objeto.objectDate || 'No disponible'
      
    // Más información o imágenes adicionales
    if objeto.additionalImages && objeto.additionalImages.length > 0
      h3 Imágenes Adicionales
      .container-imagenes
        each image in objeto.additionalImages
          img(src=image, alt='Imagen adicional', class="imagen-extra")
